            <TextBlock Background="AliceBlue" Margin="15" Height="150" Width="100"/>
            <TextBlock Background="AliceBlue" Margin="15" Height="150" Width="100"/>
            <TextBlock Background="AliceBlue" Margin="15" Height="150" Width="100"/>
            <TextBlock Background="AliceBlue" Margin="15" Height="150" Width="100"/>
            <TextBlock Background="AliceBlue" Margin="15" Height="150" Width="100"/>
            <TextBlock Background="AliceBlue" Margin="15" Height="150" Width="100"/>
            <TextBlock Background="AliceBlue" Margin="15" Height="150" Width="100"/>
            <TextBlock Background="AliceBlue" Margin="15" Height="150" Width="100"/>
        </WrapPanel>
    </Grid>
</Page>
